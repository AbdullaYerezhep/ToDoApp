<%- include("header") %> 

<body>
    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>

    <div class="box">

        <% items.forEach(item => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onChange="this.form.submit()" value="<%= item._id %>" name="checkbox">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= title %>">
        </form>
        <% }) %>

        <form action="/" method="POST">
            <input type="text" name="newItem" autocomplete="off">
            <button type="submit" name="list" value="<%= title %>">+</button>
        </form>
    </div>




</body>
<%- include("footer") %> 
